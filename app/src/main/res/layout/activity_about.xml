<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="15dp"
    tools:context=".activities.About">

    <View
        android:id="@+id/about_line1"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/about_margin"
        android:background="@color/navy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_margin"
        android:fontFamily="@font/agencyr"
        android:text="@string/ip_port"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/about_line1" />


    <View
        android:id="@+id/about_line2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/about_margin"
        android:background="@color/navy"
        app:layout_constraintTop_toBottomOf="@+id/textViewNet" />

    <TextView
        android:id="@+id/textViewVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_margin"
        android:text="@string/version"
        android:fontFamily="@font/agencyr"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/about_line2" />

    <View
        android:id="@+id/about_line3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/about_margin"
        android:background="@color/navy"
        app:layout_constraintTop_toBottomOf="@+id/textViewVer" />

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/about_margin"
        android:text="@string/contact"
        android:fontFamily="@font/agencyr"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/about_line3" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContact"
        android:contentDescription="@string/rcpi_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>